<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item android:top="3dp">
            <shape
                android:shape="oval">
                <solid android:color="#d1d3d5" />
                <size android:height="10dp"
                      android:width="10dp"/>
            </shape>
        </item>
        <item>
            <shape
                android:shape="oval">
                <gradient
                        android:startColor="#69a0dd"
                        android:endColor="#70bcf1"
                        android:angle="90"/>
                <size android:height="45dp"
                      android:width="45dp"/>
            </shape>
        </item>

    </layer-list>
</item>
</selector>
